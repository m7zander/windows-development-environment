$Boxstarter.RebootOk=$true
$Boxstarter.AutoLogin=$true
Set-WindowsExplorerOptions -EnableShowFileExtensions -EnableShowFullPathInTitleBar -EnableOpenFileExplorerToQuickAccess -EnableShowRecentFilesInQuickAccess -EnableShowFrequentFoldersInQuickAccess -EnableShowRibbon
Disable-GameBarTips
Disable-BingSearch
Enable-MicrosoftUpdate
Set-TaskbarOptions -AlwaysShowIconsOn

Update-ExecutionPolicy Unrestricted

choco feature enable -n=useRememberedArgumentsForUpgrades

cinst -y Microsoft-Hyper-V-All -source windowsFeatures

cinst -y notepadplusplus.install
cinst -y GoogleChrome
cinst -y 7zip.install
cinst -y FoxitReader
$env:Path = [System.Environment]::GetEnvironmentVariable("Path","Machine") + ";" + [System.Environment]::GetEnvironmentVariable("Path","User")
cinst -y pdfsam.install
cinst -y paint.net
cinst teamviewer -y --version 13.2.26558

# try installation of winmerge three times, because download from sourceforge is sometimes failing
cinst -y winmerge
cinst -y winmerge
cinst -y winmerge
cinst -y teamspeak
cinst -y anydesk
cinst -y hxd
cinst -y far
cinst -y firefox
cinst -y fiddler
cinst -y sysinternals
cinst -y nodejs.install
cinst -y vscode
cinst -y filezilla
cinst -y tortoisesvn
cinst -y jdk8
cinst -y sass

npm install -g npm-windows-upgrade
npm install -g gulp-cli
npm install -g brunch
npm install -g browser-sync

Install-WindowsUpdate -acceptEula

#Force Reboot
Invoke-Reboot

# Pinning Things
Install-ChocolateyPinnedTaskBarItem "$env:programfiles\Google\Chrome\Application\chrome.exe"

